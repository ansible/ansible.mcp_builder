---
# Ansible Lint Configuration for ansible.mcp_builder collection

profile: production

# Exclude patterns
exclude_paths:
  - .cache/
  - .github/
  - tests/output/
  - molecule/
  - examples/context/

# Enable specific rules
enable_list:
  - yaml

# Skip specific rules if needed
skip_list:
  - experimental # Skip experimental rules
  - name[casing] # Allow flexible task naming

# Warn on these instead of failing
warn_list:
  - command-instead-of-module
  - no-changed-when
